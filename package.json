{
  "name": "crypto-shortener",
  "version": "1.0.0",
  "description": "Shorten crypto hashes, addresses with ellipsis",
  "keywords": [
    "address",
    "bitcoin",
    "crypto",
    "ellipsis",
    "ethereum",
    "hash",
    "shorten",
    "string"
  ],
  "bugs": "https://github.com/hemilabs/crypto-shortener/issues",
  "license": "MIT",
  "author": "Gabriel Montes <gabriel@bloq.com>",
  "files": [
    "src"
  ],
  "main": "src/index.js",
  "repository": "hemilabs/crypto-shortener",
  "scripts": {
    "coverage": "c8 npm test",
    "deps:check": "knip",
    "format:check": "prettier --check .",
    "lint": "eslint --cache .",
    "prepare": "husky",
    "test": "mocha"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@types/chai": "^5.0.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.3",
    "better-sort-package-json": "^1.0.0",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "eslint": "^8.57.1",
    "eslint-config-bloq": "^4.1.0",
    "eslint-plugin-markdownlint": "^0.6.0",
    "husky": "^9.1.6",
    "knip": "^5.32.0",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=16.11"
  },
  "type": "module",
  "commitlint": {
    "rules": {
      "body-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "body-leading-blank": [
        1,
        "always"
      ],
      "header-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "header-full-stop": [
        2,
        "never",
        "."
      ],
      "header-max-length": [
        2,
        "always",
        50
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "bloq",
      "prettier"
    ],
    "overrides": [
      {
        "extends": [
          "plugin:markdownlint/recommended"
        ],
        "files": [
          "*.md"
        ],
        "parser": "eslint-plugin-markdownlint/parser",
        "rules": {
          "markdownlint/md013": "off",
          "markdownlint/md034": "warn"
        }
      },
      {
        "extends": [
          "bloq/mocha",
          "prettier"
        ],
        "files": [
          "*.test.js"
        ],
        "rules": {
          "node/no-unpublished-require": "off"
        }
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "root": true
  },
  "knip": {
    "ignoreDependencies": [
      "@types/mocha",
      "eslint-config-prettier",
      "lint-staged"
    ]
  },
  "lint-staged": {
    "!(*.{js,md}|package.json)": [
      "prettier --ignore-unknown --write"
    ],
    "*.{js,md}": [
      "eslint --cache --fix --quiet",
      "prettier --ignore-unknown --write"
    ],
    "package.json": [
      "better-sort-package-json",
      "prettier --ignore-unknown --write"
    ]
  },
  "prettier": {}
}
