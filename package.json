{
  "name": "crypto-shortener",
  "version": "1.0.0",
  "description": "Shorten crypto hashes, addresses with ellipsis",
  "keywords": [
    "address",
    "bitcoin",
    "crypto",
    "ellipsis",
    "ethereum",
    "hash",
    "shorten",
    "string"
  ],
  "bugs": "https://github.com/hemilabs/crypto-shortener/issues",
  "license": "MIT",
  "author": "Gabriel Montes <gabriel@bloq.com>",
  "files": [
    "src"
  ],
  "main": "./_esm/index.js",
  "repository": "hemilabs/crypto-shortener",
  "scripts": {
    "build": "npm run clean && npm run build:esm && npm run build:types",
    "build:esm": "tsc --noEmit false --outDir ./_esm --sourceMap",
    "build:types": "tsc --noEmit false --module esnext --declarationDir ./_types --emitDeclarationOnly --declaration --declarationMap",
    "clean": "rm -rf ./_esm ./_types",
    "coverage": "c8 npm test",
    "deps:check": "knip",
    "format:check": "prettier --check .",
    "lint": "eslint --cache .",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "tsc": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@types/node": "^22.7.3",
    "better-sort-package-json": "^1.0.0",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "eslint": "^8.57.1",
    "eslint-config-bloq": "^4.4.0",
    "eslint-plugin-markdownlint": "^0.6.0",
    "husky": "^9.1.6",
    "knip": "^5.32.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "typescript": "5.6.3",
    "vitest": "2.1.3"
  },
  "engines": {
    "node": ">=16.11"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./_esm/index.js",
      "types": "./_types/index.d.ts"
    }
  },
  "commitlint": {
    "rules": {
      "body-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "body-leading-blank": [
        1,
        "always"
      ],
      "header-case": [
        2,
        "always",
        [
          "sentence-case"
        ]
      ],
      "header-full-stop": [
        2,
        "never",
        "."
      ],
      "header-max-length": [
        2,
        "always",
        50
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "bloq",
      "prettier"
    ],
    "overrides": [
      {
        "extends": [
          "bloq/typescript"
        ],
        "files": [
          "src/**/*.ts"
        ]
      },
      {
        "extends": [
          "plugin:markdownlint/recommended"
        ],
        "files": [
          "*.md"
        ],
        "parser": "eslint-plugin-markdownlint/parser",
        "rules": {
          "markdownlint/md013": "off",
          "markdownlint/md034": "warn"
        }
      },
      {
        "extends": [
          "bloq/vitest",
          "prettier"
        ],
        "files": [
          "*.test.js"
        ]
      }
    ],
    "parserOptions": {
      "sourceType": "module"
    },
    "root": true
  },
  "knip": {
    "ignoreDependencies": [
      "eslint-config-prettier",
      "lint-staged"
    ]
  },
  "module": "./_esm/index.js",
  "prettier": {}
}
